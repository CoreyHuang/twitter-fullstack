<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script>
  $(function () {
    let socket = io();


    // 接收到chat message這個event，就執行function的事
    socket.on('public', (data) => {
      let { user, message } = data;
      let item = `${user}:${message}`
      $('#messages').append($('<div class="msg">').text(item));
    });
  });


</script>